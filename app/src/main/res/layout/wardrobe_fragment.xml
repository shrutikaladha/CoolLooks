<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTshirt"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTshirts"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/theme_color"
            android:text="TSHIRTS"
            android:textSize="@dimen/font_title_text_size" />

        <GridView
            android:id="@+id/grid1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:columnWidth='100dip'
            android:gravity='center'
            android:horizontalSpacing='4dip'
            android:numColumns='auto_fit'
            android:stretchMode='columnWidth'
            android:verticalSpacing='2dip'></GridView>

        <Button
            android:id="@+id/addTshirtsBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@color/theme_color"
            android:textColor="@color/text_color"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="Add tshirts" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llJeans"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvJeans"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="JEANS"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/font_title_text_size" />

        <GridView
            android:id="@+id/grid2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:columnWidth='100dip'
            android:gravity='center'
            android:horizontalSpacing='4dip'
            android:numColumns='auto_fit'
            android:stretchMode='columnWidth'
            android:verticalSpacing='2dip'></GridView>

        <Button
            android:id="@+id/addJeansBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@color/theme_color"
            android:textColor="@color/text_color"
            android:text="Add jeans" />

    </LinearLayout>
</LinearLayout>